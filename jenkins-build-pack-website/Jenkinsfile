	//Setting SCM Repo
	setSCMBase(scm, env.REPO_BASE)

	def scm_base_url = "http://${scm_base}${params.scm_project}/"

	if (params.scm_branch == 'master') {
		current_environment = 'prod'
	}else {
		current_environment = 'dev'
	}

	env_prefix = var_env_name_prefix

    stage('Checkout code base') {

		if (domain && domain.trim()!="") {
			bitbucket_name = params.domain + "-" + service
		 }else{
			domain = ""
		}

		sh 'rm -rf ' + bitbucket_name
		sh 'mkdir ' + bitbucket_name

		dir(bitbucket_name)
		{
			checkout([$class: 'GitSCM', branches: [[name: '*/' + params.scm_branch]], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: env.REPO_CREDENTIAL_ID , url: scm_base_url + bitbucket_name + '.git']]])
		}

